<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.PremiumActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbar_color"
        app:title="Premium"/>

    <ImageView
        android:id="@+id/premiumIv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/premium"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:layout_below="@id/toolbar"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/premiumLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Premium Access!"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_below="@id/premiumIv"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:layout_margin="10dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/premiumDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enjoy Premium with No Ads and unlimited Budgets and also Create Unlimited Categories!"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_below="@id/premiumLbl"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:textAlignment="center"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/premiumAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â‚¹149 for Lifetime Membership"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_below="@id/premiumDesc"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:textAlignment="center"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buyPremiumBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/premiumAmount"
        android:layout_margin="10dp"
        android:text="Buy Premium"/>

</RelativeLayout>